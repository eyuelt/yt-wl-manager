{
    "manifest_version": 3,
    "name": "YouTube Watch Later Sync",
    "version": "1.0",
    "description": "Syncs YouTube Watch Later playlist with the local viewer app.",
    "permissions": [
        "activeTab",
        "scripting",
        "storage"
    ],
    "host_permissions": [
        "https://www.youtube.com/*"
    ],
    "content_scripts": [
        {
            "matches": [
                "https://www.youtube.com/playlist?list=WL*"
            ],
            "js": [
                "content.js"
            ],
            "all_frames": false
        }
    ],
    "background": {
        "service_worker": "background.js"
    },
    "externally_connectable": {
        "matches": ["http://localhost:*/*", "http://127.0.0.1:*/*"]
    },
    "web_accessible_resources": [
        {
            "resources": ["inject.js"],
            "matches": ["https://www.youtube.com/*"]
        }
    ]
}